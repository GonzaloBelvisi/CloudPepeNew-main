@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="flex items-center justify-center min-h-screen bg-slate-900">
    <div class="text-center bg-slate-800 rounded-3xl shadow-2xl p-16 max-w-4xl">
        <div class="text-8xl mb-8">⚠️</div>
        <h1 class="text-6xl font-bold text-red-400 mb-8">Error</h1>
        
        @if (@Model?.ShowRequestId == true)
        {
            <div class="bg-slate-700 rounded-2xl p-8 mb-8">
                <p class="text-2xl text-slate-300 mb-4">Request ID</p>
                <p class="text-xl text-slate-400 font-mono">@Model.RequestId</p>
            </div>
        }

        <div class="mb-8">
            <button 
                onclick="window.history.back()" 
                class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-6 px-12 rounded-2xl text-2xl transition-colors duration-200">
                🔄 Volver
            </button>
        </div>

        <p class="text-2xl text-slate-400">
            Ha ocurrido un error al procesar la solicitud.
        </p>
    </div>
</div>